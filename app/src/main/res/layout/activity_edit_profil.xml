<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".EditProfilActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="right|center"
        android:layout_margin="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"
            android:layout_weight="1"
            android:text="Edit Profil"
            android:textSize="22dp"
            android:textColor="#303030"
            android:textStyle="bold"/>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/home"
            android:onClick="Utama"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/account"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/account"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/username"/>

                <EditText
                    android:id="@+id/namaEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="User Name"
                    android:textColor="#303030"
                    android:backgroundTint="#FF01A3CC"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:inputType="textPersonName"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/jk"/>

                <EditText
                    android:id="@+id/jkEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Jenis Kelamin"
                    android:textColor="#000"
                    android:backgroundTint="#FF01A3CC"
                    android:gravity="center|left"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:inputType="textPersonName"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/phone"/>

                <EditText
                    android:id="@+id/noEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="No. Telfon"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:textColor="#303030"
                    android:backgroundTint="#FF01A3CC"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="148dp">

                <Button
                    android:id="@+id/tambah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_margin="3dp"
                    android:backgroundTint="#01a3cc"
                    android:backgroundTintMode="multiply"
                    android:onClick="profil"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>