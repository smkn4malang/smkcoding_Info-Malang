<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".terdahuluFragment"
    android:orientation="vertical"
    android:background="#fff">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1.5">

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/akun"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:paddingBottom="30dp"
                android:textColor="#000"
                android:textSize="18dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="left|center"
                android:text="M Rafli Ramadani"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Deskripsi Text blablablabla blablalala blabl ablabla blablblabla blabl abla blbl abla blla blablablabllbabl ablblblblab llba . . ."
                android:textSize="16dp"
                android:textColor="#000"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/foto2"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/like"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="40dp"
                android:gravity="left|center"
                android:text="35"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#000"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                android:text=". . ."
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="#000"
                />
            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="@drawable/komen"
                />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>